@model webBanSach.Helpers.PaginatedList<webBanSach.Models.LienHe>

@{
    ViewData["Title"] = "Danh sách Liên hệ";
    var total = Model.Count; // tổng số bản ghi trong trang hiện tại
}

<div class="container mt-4">
    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-envelope-paper-heart me-2"></i> Danh sách Liên hệ
            <small class="text-muted fs-6">(@total bản ghi trong trang)</small>
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-clockwise me-1"></i> Làm mới
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form tìm kiếm -->
    <form method="get" class="mb-4">
        <div class="input-group input-group-lg shadow-sm">
            <span class="input-group-text bg-primary text-white">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control border-primary"
                   placeholder="Nhập tên, email hoặc tiêu đề để tìm..." />
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-funnel me-1"></i> Tìm kiếm
            </button>
        </div>
    </form>

    <!-- Bảng danh sách -->
    <div class="table-responsive shadow rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-primary text-center align-middle">
                <tr>
                    <th><i class="bi bi-person-fill me-1"></i> Họ tên</th>
                    <th><i class="bi bi-envelope-at-fill me-1"></i> Email</th>
                    <th><i class="bi bi-chat-left-text-fill me-1"></i> Tiêu đề</th>
                    <th><i class="bi bi-calendar-event-fill me-1"></i> Ngày gửi</th>
                    <th><i class="bi bi-flag-fill me-1"></i> Trạng thái</th>
                    <th><i class="bi bi-gear-fill me-1"></i> Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                            Không có liên hệ nào được tìm thấy.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.Email</td>
                            <td>@item.TieuDe</td>
                            <td>@item.NgayGui?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center">
                                @if (item.TrangThai == "DaXuLy")
                                {
                                    <span class="badge bg-success px-3 py-2 shadow-sm">
                                        <i class="bi bi-check-circle me-1"></i> Đã xử lý
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark px-3 py-2 shadow-sm">
                                        <i class="bi bi-hourglass-split me-1"></i> Chưa xử lý
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <!-- Xem -->
                                <a asp-action="Details" asp-route-id="@item.MaLH"
                                   class="btn btn-info btn-sm me-1" title="Xem chi tiết">
                                    <i class="bi bi-eye-fill"></i>
                                </a>

                                <!-- Chuyển trạng thái -->
                                <form asp-action="Toggle" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.MaLH" />
                                    <button type="submit" class="btn btn-warning btn-sm me-1" title="Đánh dấu đã xử lý">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                </form>

                                <!-- Xóa -->
                                <button type="button" class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmDeleteModal"
                                        data-id="@item.MaLH"
                                        data-name="@item.HoTen"
                                        title="Xóa liên hệ">
                                    <i class="bi bi-trash3-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- PHÂN TRANG -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-search="@ViewBag.Search">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-search="@ViewBag.Search">@i</a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-search="@ViewBag.Search">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i> Xác nhận xóa liên hệ
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>
                        Bạn có chắc chắn muốn xóa liên hệ từ
                        <strong id="deleteItemName" class="text-danger"></strong> không?
                    </p>
                    <input type="hidden" name="id" id="deleteItemId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary px-3" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-danger px-3">
                        <i class="bi bi-trash3-fill me-1"></i> Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');

            document.getElementById('deleteItemName').textContent = name;
            document.getElementById('deleteItemId').value = id;
            document.getElementById('deleteForm').action = '/Admin/LienHe/DeleteConfirmed/' + id;
        });
    </script>
}
