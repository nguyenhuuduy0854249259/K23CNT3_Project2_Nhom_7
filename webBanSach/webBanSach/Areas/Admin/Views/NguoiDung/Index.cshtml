@model webBanSach.Helpers.PaginatedList<webBanSach.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý Người Dùng";
    var total = Model.Count; // tổng số bản ghi trong trang hiện tại
}

<h2 class="mb-4">
    <i class="fa-solid fa-users-gear text-primary me-2"></i>
    @ViewData["Title"]
    <small class="text-muted fs-6">(@total bản ghi trong trang)</small>
</h2>

<!-- Bộ lọc -->
<form asp-action="Index" method="get" class="row g-3 align-items-center bg-light p-3 rounded shadow-sm mb-4">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text bg-white"><i class="fa-solid fa-magnifying-glass text-secondary"></i></span>
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                   class="form-control" placeholder="Tìm theo tên..." />
        </div>
    </div>

    <div class="col-md-3">
        <select name="loaiNguoiDung" class="form-select border-primary">
            <option value="">-- Tất cả loại --</option>
            @foreach (var type in new[] { "Admin", "User" })
            {
                <option value="@type" selected="@(type == (ViewData["LoaiNguoiDung"]?.ToString() ?? ""))">
                    @type
                </option>
            }
        </select>
    </div>

    <div class="col-md-5 d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-magnifying-glass me-1"></i> Tìm kiếm
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fa-solid fa-rotate"></i> Làm mới
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-user-plus"></i> Thêm Người Dùng
        </a>
    </div>
</form>

<!-- Bảng dữ liệu -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark text-center">
                <tr>
                    <th>Ảnh</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>SĐT</th>
                    <th>Loại</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-muted py-4">
                            <i class="fa-regular fa-face-frown me-2"></i>Không có người dùng nào được tìm thấy.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td>
                                @if (!string.IsNullOrEmpty(item.HinhAnh))
                                {
                                    var imagePath = item.LoaiNguoiDung == "Admin"
                                    ? $"~/images/admins/{item.HinhAnh}"
                                    : $"~/images/nguoidung/{item.HinhAnh}";
                                    <img src="@Url.Content(imagePath)"
                                         class="rounded-circle border"
                                         style="width:60px; height:60px; object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border mx-auto"
                                         style="width:60px; height:60px;">
                                        <i class="fa-solid fa-user text-secondary"></i>
                                    </div>
                                }
                            </td>
                            <td class="fw-semibold">@item.HoTen</td>
                            <td>@item.Email</td>
                            <td>@item.SDT</td>
                            <td>
                                <span class="badge bg-@(item.LoaiNguoiDung == "Admin" ? "danger" : "primary")">
                                    @item.LoaiNguoiDung
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@(item.TrangThai == "Hoạt động" ? "success" : "secondary")">
                                    @item.TrangThai
                                </span>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-1">
                                    <a asp-action="Details" asp-route-id="@item.MaND"
                                       class="btn btn-info btn-sm text-white">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaND"
                                       class="btn btn-warning btn-sm text-white">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <form asp-action="ToggleStatus" asp-route-id="@item.MaND" method="post" class="d-inline">
                                        @if (item.TrangThai == "Hoạt động")
                                        {
                                            <button type="submit" class="btn btn-secondary btn-sm" title="Khóa tài khoản">
                                                <i class="fa-solid fa-lock"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-success btn-sm" title="Mở khóa tài khoản">
                                                <i class="fa-solid fa-unlock"></i>
                                            </button>
                                        }
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- PHÂN TRANG -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-loaiNguoiDung="@ViewData["LoaiNguoiDung"]">
                    <i class="fa-solid fa-angle-left"></i>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-loaiNguoiDung="@ViewData["LoaiNguoiDung"]">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-loaiNguoiDung="@ViewData["LoaiNguoiDung"]">
                    <i class="fa-solid fa-angle-right"></i>
                </a>
            </li>
        </ul>
    </nav>
}
