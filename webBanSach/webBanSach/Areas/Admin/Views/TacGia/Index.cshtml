@model IEnumerable<webBanSach.Models.TacGia>

@{
    ViewData["Title"] = "Quản lý tác giả";
    var total = Model.Count();
}

<div class="container mt-4">
    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark mb-0">
            <i class="bi bi-person-lines-fill text-primary"></i> @ViewData["Title"]
            <small class="text-muted fs-6">(@total tác giả)</small>
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm tác giả
        </a>
    </div>

    <!-- Tìm kiếm -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-center">
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" name="searchString"
                               value="@Context.Request.Query["searchString"]"
                               class="form-control border-start-0"
                               placeholder="Nhập tên tác giả cần tìm..." />
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Làm mới
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-success text-dark">
                        <tr>
                            <th style="width:100px;">Mã TG</th>
                            <th>Tên tác giả</th>
                            <th class="text-center" style="width:180px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    <i class="bi bi-emoji-frown"></i> Không tìm thấy tác giả nào.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@item.MaTG</span></td>
                                    <td class="fw-semibold">@item.TenTG</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.MaTG" class="btn btn-sm btn-info me-1" title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MaTG" class="btn btn-sm btn-warning me-1 text-white" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmDeleteModal"
                                                data-id="@item.MaTG"
                                                data-name="@item.TenTG"
                                                title="Xóa">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Xác nhận xóa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="deleteForm" method="post">
                <div class="modal-body">
                    Bạn có chắc muốn xóa tác giả <strong id="deleteItemName"></strong> không?
                    <input type="hidden" name="id" id="deleteItemId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3"></i> Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteModal = document.getElementById('confirmDeleteModal');
            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const name = button.getAttribute('data-name');

                document.getElementById('deleteItemName').textContent = name;
                document.getElementById('deleteItemId').value = id;
                document.getElementById('deleteForm').action = '/Admin/TacGia/Delete/' + id;
            });
        });
    </script>
}
