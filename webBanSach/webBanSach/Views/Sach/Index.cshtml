@model IEnumerable<webBanSach.ViewModels.SachViewModel>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Danh sách Sách";
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("MaND");
}

<div class="container mt-4">

    <!-- THANH TÌM KIẾM & LỌC -->
    <div class="filter-bar bg-white p-3 rounded-4 shadow-sm border mb-4">
        <div class="d-flex flex-wrap gap-3 justify-content-center align-items-center">

            <!-- Ô tìm kiếm -->
            <form asp-action="Index" method="get"
                  class="d-flex align-items-center search-pill bg-light px-3 py-2 rounded-pill shadow-sm"
                  style="min-width: 280px;">
                <i class="bi bi-search text-primary me-2 fs-5"></i>
                <input type="text" name="keyword" value="@ViewBag.Keyword"
                       class="form-control border-0 bg-transparent shadow-none"
                       placeholder="Tìm sách, tác giả, thể loại..." />
                <button type="submit" class="btn btn-primary btn-sm ms-2 rounded-pill px-3">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <!-- Dropdown Thể loại -->
            <div class="dropdown">
                <button class="btn btn-outline-primary rounded-pill px-4 d-flex align-items-center gap-2 dropdown-toggle"
                        type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-book"></i> Thể loại
                </button>
                <ul class="dropdown-menu shadow-sm animate__animated animate__fadeIn">
                    @foreach (var loai in (List<string>)ViewBag.TheLoaiList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-action="Search"
                               asp-route-filterType="theloai"
                               asp-route-keyword="@loai">
                                @loai
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Dropdown Tác giả -->
            <div class="dropdown">
                <button class="btn btn-outline-success rounded-pill px-4 d-flex align-items-center gap-2 dropdown-toggle"
                        type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-lines-fill"></i> Tác giả
                </button>
                <ul class="dropdown-menu shadow-sm animate__animated animate__fadeIn">
                    @foreach (var tg in (List<string>)ViewBag.TacGiaList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-action="Search"
                               asp-route-filterType="tacgia"
                               asp-route-keyword="@tg">
                                @tg
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Dropdown NXB -->
            <div class="dropdown">
                <button class="btn btn-outline-danger rounded-pill px-4 d-flex align-items-center gap-2 dropdown-toggle"
                        type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-building"></i> NXB
                </button>
                <ul class="dropdown-menu shadow-sm animate__animated animate__fadeIn">
                    @foreach (var nxb in (List<string>)ViewBag.NXBList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-action="Search"
                               asp-route-filterType="nxb"
                               asp-route-keyword="@nxb">
                                @nxb
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- DANH SÁCH SÁCH -->
    <div class="row g-4 justify-content-center">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted">
                <p>Không tìm thấy sách phù hợp 😢</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 d-flex justify-content-center">
                    <div class="card book-card border-0 shadow-sm hover-card">

                        <!-- Hình ảnh sách -->
                        <div class="position-relative">
                            <div class="book-img-container">
                                <img src="~/images/sach/@(item.HinhAnh ?? "no-image.png")"
                                     alt="@item.TenSach"
                                     class="card-img-top rounded-top-3" />
                            </div>
                            @if (item.SoLuong == 0)
                            {
                                <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-3 py-2 rounded-pill fw-semibold">
                                    Hết hàng
                                </span>
                            }
                        </div>

                        <!-- Thông tin -->
                        <div class="card-body text-center d-flex flex-column">
                            <h6 class="fw-bold text-dark text-truncate mb-2">@item.TenSach</h6>
                            <p class="text-muted small mb-1">✍ @item.TacGias</p>
                            <p class="text-danger fw-bold mb-3">@item.GiaBan.ToString("N0") ₫</p>

                            <div class="d-grid gap-2 mt-auto">
                                <a asp-action="Details" asp-route-id="@item.MaSach"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i> Chi tiết
                                </a>

                                @if (item.SoLuong > 0)
                                {
                                    @if (userId != null)
                                    {
                                        <form asp-controller="Cart" asp-action="Add" method="post">
                                            <input type="hidden" name="maSach" value="@item.MaSach" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a href="/Account/Login" class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-box-arrow-in-right me-1"></i> Thêm vào giỏ
                                        </a>
                                    }
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm w-100" disabled>Hết hàng</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8fafc;
    }

    /* Filter bar */
    .filter-bar .btn {
        transition: 0.3s;
    }

        .filter-bar .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

    /* Book card */
    .book-card {
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
        background-color: #fff;
    }

    .hover-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }

    /* ✅ Khung ảnh 4x6 (2:3) — thu nhỏ cho rõ hơn */
    .book-img-container {
        width: 100%;
        aspect-ratio: 2 / 3;
        max-height: 270px; /* ↓ giảm nhẹ chiều cao ảnh */
        overflow: hidden;
        background: #f8f9fa;
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid #eee;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
    }

        .book-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .book-card:hover .book-img-container img {
        transform: scale(1.05);
    }

    .book-card h6 {
        font-size: 1rem;
        line-height: 1.4;
        min-height: 42px;
    }

    .book-card .btn {
        border-radius: 10px;
        transition: 0.25s ease;
    }

        .book-card .btn:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }
</style>

