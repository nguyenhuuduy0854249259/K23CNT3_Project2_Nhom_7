@model IEnumerable<webBanSach.ViewModels.SachViewModel>

<h2 class="mb-4 text-center text-primary">@ViewBag.TheLoai</h2>

<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var sach in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="card h-100 shadow-sm border-0 rounded-3 book-card" style="transition: transform 0.3s, box-shadow 0.3s;">
                    <img src="@Url.Content("~/images/sach/" + sach.HinhAnh)"
                         class="card-img-top rounded-top"
                         alt="@sach.TenSach"
                         style="height:220px; object-fit:cover;" />

                    <div class="card-body text-center">
                        <h5 class="card-title text-truncate" title="@sach.TenSach">@sach.TenSach</h5>
                        <p class="text-danger fw-bold mb-3">@sach.GiaBan.ToString("n0") ₫</p>
                        <a asp-controller="Sach"
                           asp-action="Details"
                           asp-route-id="@sach.MaSach"
                           asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                           class="btn btn-outline-primary px-3">
                            Xem chi tiết
                        </a>

                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted text-center">Không có sách nào trong thể loại này.</p>
    }
</div>

<style>
    /* Card hover effect */
    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    /* Giới hạn chữ trong tên sách */
    .card-title {
        font-size: 1rem;
        min-height: 2.5em; /* giữ độ cao đồng đều */
    }

    /* Responsive chỉnh lại ảnh */
    @@media (max-width: 768px) {
        .card-img-top

    {
        height: 200px;
    }

    }
</style>
